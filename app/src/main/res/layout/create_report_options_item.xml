<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Space
        android:id="@+id/leftSideSpace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="60dp"
        android:layout_height="10dp" />
    <Space
        android:id="@+id/rightSideSpace"
        app:layout_constraintStart_toEndOf="@id/optionsImage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="10dp"
        android:layout_height="10dp" />
    <ImageView
        android:id="@+id/optionsImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bad"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/leftSideSpace"
        />

    <TextView
        android:id="@+id/optionsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bad"
        app:layout_constraintTop_toBottomOf="@id/optionsImage"
        app:layout_constraintStart_toStartOf="@id/optionsImage"
        app:layout_constraintEnd_toEndOf="@id/optionsImage"
        android:gravity="center"
        />


</androidx.constraintlayout.widget.ConstraintLayout>