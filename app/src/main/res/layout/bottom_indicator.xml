<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/includeBtn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/rounded_border_with_backgrnd"
        android:text="@string/do_something"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        app:layout_constraintVertical_bias="0.23" />

    <com.skydoves.progressview.ProgressView
        android:id="@+id/includeProgressView"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="@dimen/normal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/includeBtn"
        app:layout_constraintVertical_bias="1"
        app:progressView_colorBackground="@color/progressBackground"
        app:progressView_colorProgress="@color/progressColor"
        app:progressView_max="500"
        app:progressView_min="0"
        app:progressView_padding="0dp"
        app:progressView_radius="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>