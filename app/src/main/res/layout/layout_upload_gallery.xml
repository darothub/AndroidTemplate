<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/uploadBottomSheetContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:elevation="10dp"
    android:padding="@dimen/normal_padding"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imageUploadLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >
        <Button
            android:id="@+id/cameraIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/normal_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/galleryIcon"
            app:srcCompat="@drawable/camera_icon"
            android:background="@drawable/camera_icon"
            android:focusable="true"
            android:clickable="true"
            />
        <Button
            android:id="@+id/galleryIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/normal_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cameraIcon"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/gallery"
            android:focusable="true"
            android:clickable="true"
            />
        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="@id/cameraIcon"
            app:layout_constraintEnd_toEndOf="@id/galleryIcon"
            app:layout_constraintBottom_toTopOf="@id/galleryBottomSheet"
            app:layout_constraintTop_toBottomOf="@id/galleryIcon"
            android:elevation="10dp"
            android:src="@drawable/healthpic"
            android:visibility="gone"
            android:background="@drawable/shadow"
            android:scaleType="centerCrop"
           android:layout_margin="15dp"/>

        <include
            android:id="@+id/galleryBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@id/galleryIcon"
            layout="@layout/bottom_indicator"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/logoutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:padding="@dimen/normal_padding"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        tools:visibility="visible"
        >
        <TextView
            android:id="@+id/logoutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/you_are_about"
            android:textSize="@dimen/large_font_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/normal_margin"/>

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:textColor="@color/colorNeutral"
            android:textAllCaps="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/logoutText"
            app:layout_constraintEnd_toStartOf="@id/exitButton"
            android:layout_marginTop="50dp"

            android:background="@drawable/rounded_border_with_backgrnd"
            />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/exit"
            android:textColor="@color/colorNeutral"
            android:textAllCaps="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintStart_toEndOf="@id/logoutButton"
            app:layout_constraintTop_toTopOf="@id/logoutButton"
            app:layout_constraintBottom_toBottomOf="@id/logoutButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_border_with_backgrnd"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

