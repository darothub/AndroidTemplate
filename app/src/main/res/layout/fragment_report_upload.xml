<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ReportUploadFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/reportUploadAppBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:textAlignment="center"
            app:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/reportUploadToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                app:titleTextColor="@color/colorPrimaryDark">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/reportUploadBackButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_back_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/create_new_report"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/large_font_size"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/uploadCard"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:layout_constraintTop_toBottomOf="@id/reportUploadAppBar"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="10dp"
            android:background="@drawable/shadow"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:id="@+id/cameraImage"
                android:layout_width="20dp"
                android:layout_height="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/cameraa_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/cameraImage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/upload_picture"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/large_font_size"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/uploadIcon"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/ic_chevron_right"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:id="@+id/bottomSpace"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/uploadCard" />
        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
            android:id="@+id/reportDetailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bottomSpace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:borderColor="@color/colorPrimaryDark"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            app:cornerRadius="10dp"

            >
            <EditText
                android:id="@+id/storyEditText"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:maxLines="50"
                android:gravity="top|left"
                android:hint="@string/enter_your_report" />
        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>
        <Spinner
            android:id="@+id/reportUploadState"
            android:layout_height="55dp"
            android:background="@drawable/spinner_backgrnd"
            android:gravity="left|center"
            android:hint="@string/states"
            android:padding="10dp"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:spinnerMode="dropdown"
            style="@style/CustomEditTextStyle"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            android:dropDownVerticalOffset="95dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:popupTheme="@style/AppThemeActivity"
            app:layout_constraintTop_toBottomOf="@id/reportDetailField"
            />
<!--        <Spinner-->
<!--            android:id="@+id/reportUploadLGA"-->
<!--            android:layout_width="match_parent"-->
<!--            android:background="@drawable/spinner_backgrnd"-->
<!--            android:layout_height="55dp"-->
<!--            android:gravity="left|center"-->
<!--            android:hint="@string/lga"-->
<!--            android:padding="10dp"-->
<!--            android:layout_marginLeft="@dimen/normal_margin"-->
<!--            android:layout_marginRight="@dimen/normal_margin"-->
<!--            style="@style/CustomEditTextStyle"-->
<!--            android:textColor="@color/colorPrimaryDark"-->
<!--            android:textColorHint="@color/colorTextHint"-->
<!--            android:textSize="16sp"-->
<!--            app:layout_constraintTop_toBottomOf="@id/reportUploadState"-->
<!--            />-->
        <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
            android:id="@+id/reportUploadTown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            app:borderColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reportUploadState">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/street_hint_text"
                android:textColorHint="@color/colorTextHint"
                android:singleLine="true" />
        </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>
        <Space
            android:id="@+id/topSpace"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reportUploadTown" />
        <include
            android:id="@+id/reportUploadBottomLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginLeft="@dimen/normal_margin"
            app:layout_constraintTop_toBottomOf="@id/topSpace"
            layout="@layout/bottom_indicator"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
