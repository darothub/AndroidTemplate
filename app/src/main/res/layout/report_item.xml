<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <Space
        android:id="@+id/topSpace"
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow"
            android:elevation="10dp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/topSpace"
            android:id="@+id/cardView"
            android:padding="5dp">

            <ImageView
                android:id="@+id/reportImage"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:background="@drawable/rounded_border_with_backgrnd_white"
                android:scaleType="fitXY"
                android:src="@drawable/applogo"
                android:layout_margin="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.1" />



            <TextView
                android:id="@+id/reportTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/food_price"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/large_font_size"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/medium_margin_size"
                app:layout_constraintStart_toEndOf="@id/reportImage"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/reportDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="@string/dummy_details"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/large_font_size"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="@dimen/medium_margin_size"
                app:layout_constraintBottom_toTopOf="@id/reportLocation"
                app:layout_constraintStart_toEndOf="@id/reportImage"
                app:layout_constraintTop_toBottomOf="@id/reportTitle"
                app:layout_constraintVertical_bias=".22" />

            <TextView
                android:id="@+id/reportLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="@string/location"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal"
                android:layout_marginLeft="@dimen/medium_margin_size"
                app:layout_constraintBottom_toBottomOf="@id/reportImage"
                app:layout_constraintStart_toEndOf="@id/reportImage"
                app:layout_constraintTop_toBottomOf="@id/reportDetails" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>