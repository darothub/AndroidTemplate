<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/reportImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/rounded_border"
                app:layout_constraintVertical_bias="0.1"/>
            <TextView
                android:id="@+id/reportTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/reportImage"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/food_price"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/reportDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/reportImage"
                app:layout_constraintTop_toBottomOf="@id/reportTitle"
                app:layout_constraintBottom_toBottomOf="@id/reportImage"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/dummy_details"
                android:textStyle="bold"
                android:maxLines="3"
                android:ems="10"
                android:ellipsize="end"
                app:layout_constraintVertical_bias=".22"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView
                android:id="@+id/reportLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/reportImage"
                app:layout_constraintTop_toBottomOf="@id/reportDetails"
                app:layout_constraintBottom_toBottomOf="@id/reportImage"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/location"
                android:textStyle="normal"
                android:ems="10"
                android:ellipsize="end"
                android:textColor="@color/colorPrimaryDark"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>